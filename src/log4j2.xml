<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appenders>
        <File name="File" fileName="log.txt">
            <PatternLayout pattern="[%d{HH:mm:ss.SSS}] [%t] %-5level - %msg%n"/>
        </File>
    </appenders>
    <loggers>
        <root level="error">
            <appender-ref ref="File"/>
        </root>
    </loggers>
</configuration>